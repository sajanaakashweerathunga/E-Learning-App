<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".S_BookDetails">

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="721dp"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">


        <ImageView
            android:id="@+id/book_user_view_image"
            android:layout_width="220dp"
            android:layout_height="163dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="78dp"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="98dp"
            app:srcCompat="@android:drawable/sym_def_app_icon" />

        <TextView
            android:id="@+id/book_user_view_book_name"
            android:layout_width="353dp"
            android:layout_height="35dp"
            android:layout_below="@+id/book_user_view_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="75dp"
            android:gravity="center"
            android:text="Book Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_user_view_author"
            android:layout_width="292dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_user_view_book_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="75dp"
            android:gravity="center"
            android:text="Author Name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ScrollView
            android:id="@+id/book_ds"
            android:layout_width="379dp"
            android:layout_height="398dp"
            android:layout_below="@+id/book_user_view_author"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="17dp"
            android:layout_marginBottom="31dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/book_user_view_description"
                    android:layout_width="364dp"
                    android:layout_height="384dp"
                    android:layout_below="@+id/book_user_view_author"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="0dp"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</androidx.cardview.widget.CardView>