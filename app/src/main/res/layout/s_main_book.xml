<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:elevation="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="411dp"
        android:layout_height="237dp"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/book_image"
            android:layout_width="101dp"
            android:layout_height="104dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="40dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/bookname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/book_image"
            android:text="Book Name"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/book_authorname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bookname"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/book_image"
            android:text="Author Name"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/book_stream"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/book_authorname"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/book_image"
            android:text="Stream"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/book_description"
            android:layout_width="274dp"
            android:layout_height="52dp"
            android:layout_below="@+id/book_stream"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/book_image"
            android:text="Description"
            android:textColor="#000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/book_edit"
            android:layout_width="89dp"
            android:layout_height="42dp"
            android:layout_below="@+id/book_description"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="192dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="28dp"
            android:layout_toStartOf="@+id/book_delete"
            android:text="EDIT" />

        <Button
            android:id="@+id/book_delete"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_below="@+id/book_description"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="28dp"
            android:text="DELETE" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>